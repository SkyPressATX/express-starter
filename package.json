{
  "name": "express-starter",
  "version": "0.1.0",
  "description": "Express + WebPack + Babel + Docker starter kit",
  "homepage": "https://skypress.io",
  "repository": "https://github.com/SkyPressATX/express-starter.git",
  "author": "BMO <bmo@skypress.io>",
  "license": "MIT",
  "engines": {
    "node": ">=12.7"
  },
  "scripts": {
    "lint": "standard --fix --env node",
    "build": "rm -rf dist && webpack",
    "start": "nodemon ./dist/server.js",
    "test": "mocha --require @babel/register --require dotenv/config --exit 'src/**/*.spec.js' ||true",
    "debug": "node --inspect-brk ./dist/server.js"
  },
  "standard": {
    "ignore": [
      "src/**/*.spec.js",
      "**/*.config.js"
    ]
  },
  "nodemonConfig": {
    "watch": "src",
    "exec": "yarn build && node"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "jsdoc": "^3.6.3",
    "mocha": "^6.2.0",
    "mocha-loader": "^3.0.0",
    "nodemon": "^1.19.1",
    "standard": "^13.1.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "lodash": "^4.17.19",
    "moment": "^2.24.0",
    "winston": "^3.2.1"
  }
}
